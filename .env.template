# =====================================================================
# TravelRoboto â€” Environment Template
# Copy to `.env` for local dev and set real secrets in your platform's
# secret manager in staging/production. Keys are UPPER_SNAKE_CASE.
# Notes:
# - Booleans are "true"/"false" (lowercase).
# - Lists are comma-separated with no spaces (e.g., a,b,c).
# - Do not quote values unless necessary.
# =====================================================================

# ---------------------------
# App
# ---------------------------
APP_ENV=development  # development, production, test
LOG_LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR, CRITICAL


# ---------------------------
# Gmail (travel confirmations ingestion)
# OAuth2 Client for the TravelBot inbox parser
# ---------------------------
TRAVELBOT_GMAIL_CLIENT_ID=None
# e.g., # e.g., XXXXXX-XXXXXXXXXXXXXXXX.apps.googleusercontent.com

TRAVELBOT_GMAIL_CLIENT_SECRET=None
# e.g., your OAuth2 client secret (keep secret)


# ---------------------------
# LLM /AI
# ---------------------------
OPENAI_API_KEY=None
# Your OpenAI API key (keep secret)


# ---------------------------
# PostgreSQL Database
# ---------------------------
DATABASE_URL=None

# SQLAlchemy / Pool tuning
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_ECHO=false  # true to echo SQL for debugging


# ---------------------------
# Twilio (SMS interface)
# ---------------------------
TWILIO_ACCOUNT_SID=None
# e.g., ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

TWILIO_AUTH_TOKEN=None
# e.g., your Twilio auth token (keep secret)

TWILIO_PHONE_NUMBER=None
# Your Twilio phone number (in E.164 format, e.g., +15551234567)


# ---------------------------
# US A2P 10DLC registration (required for A2P messaging compliance in the US)
# These are Twilio-assigned IDs, not secrets.
# Format: alphanumeric strings (typically start with 'AP', 'B', or 'C')
# ---------------------------
A2P_CUSTOMER_PROFILE=
# e.g., your Twilio customer profile SID (starts with 'BU' or 'BP')

A2P_BRAND=
# e.g., your Twilio brand SID (starts with 'B')

A2P_CAMPAIGN=
# e.g., your Twilio campaign SID (starts with 'CE' or 'C')
# See https://www.twilio.com/docs/sms/a2p-10dlc for more info.


# ---------------------------
# Web UI Assets / Paths
# ---------------------------
TEMPLATES_DIR=app/interfaces/web/templates
STATIC_DIR=app/interfaces/web/static
ICONS_DIR=app/interfaces/web/static/icons
FAVICON_FILENAME=favicon.ico
WEB_MANIFEST_FILENAME=site.webmanifest
